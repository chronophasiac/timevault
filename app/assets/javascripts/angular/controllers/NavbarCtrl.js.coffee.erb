@timevault.controller 'NavbarCtrl', ['$scope', '$location', 'Auth', '$modal', ($scope, $location, Auth, $modal) ->
  $scope.init = ->
    $scope.currentUser = {}
    $scope.newUser = {}

    Auth.currentUser().then(
      (user) ->
        $scope.currentUser = user
      (error) ->
        console.log error)

  $scope.userSignedIn = ->
    !!$scope.currentUser.email

  $scope.login = ->
    Auth.login($scope.user).then (user) ->
      $scope.currentUser = user

  $scope.logout = ->
    Auth.logout().then (oldUser) ->
      $scope.currentUser = {}
      $location.path( '/' )

  $scope.open = ->
    modalInstance = $modal.open
      templateUrl: '<%= asset_path("registrations/new.html") %>',
      controller: 'RegistrationCtrl',
      resolve:
        user: ->
          $scope.newUser

    modalInstance.result.then (registeredUser) ->
      $scope.user = registeredUser
      $scope.login()
]
