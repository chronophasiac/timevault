nav.navbar.navbar-default(role="navigation" ng-controller='NavbarCtrl' ng-init='init()')
  div.container-fluid
    div.navbar-header
      button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      = link_to 'Timevault', root_path, class: 'navbar-brand'

    div.collapse.navbar-collapse#bs-example-navbar-collapse-1
      ul.nav.navbar-nav
        li
          a(href="/pomodoros") Pomodoros
        li.dropdown
          a.dropdown-toggle(href="#" data-toggle="dropdown")
            | Dropdown
            b.caret
          ul.dropdown-menu
            li
              a(href="#") Action
            li.divider
            li
              a(href="#") Another action
      .navbar-right(ng-cloak)
        form.navbar-form.navbar-left(role="login" ng-hide='currentUser.email' ng-submit='login()')
          div.form-group
            input.form-control(type="email" placeholder="Email" ng-model='user.email' data-non-blank)
            input.form-control(type="password" placeholder="Password" ng-model='user.password' data-non-blank)
          button.btn.btn-default(type="submit") Login
        div(ng-show='currentUser.email')
          p.navbar-text
            ' Signed in as {{currentUser.email}}
          button.btn.btn-default.navbar-btn(ng-click='logout()') Sign Out
